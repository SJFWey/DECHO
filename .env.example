# DECHO Example Environment Configuration
# Copy this file to .env and fill in your actual values.
# Do not commit your .env file to version control.

# ============================================
# LLM Configuration (Required for text processing)
# ============================================
LLM_API_KEY=YOUR_LLM_API_KEY_HERE
LLM_BASE_URL=https://api.example.com/v1
LLM_MODEL=gemini-2.5-flash

# ============================================
# TTS Configuration (Required for audio generation)
# ============================================
TTS_API_KEY=YOUR_TTS_API_KEY_HERE
TTS_MODEL=gemini-2.5-flash-preview-tts

# TTS Voice Settings
TTS_VOICE_MALE=Orus
TTS_VOICE_FEMALE=Kore

# TTS Speech Defaults
# Example values: "fast native conversational pace", "slow", "medium"
TTS_SPEED=fast native conversational pace
TTS_TONE=slightly clipped, strong linking, reduced pauses
TTS_LANGUAGE=en-US

# ============================================
# ASR Configuration
# ============================================
ASR_METHOD=parakeet
# If you use parakeet, point to the model directory in your repo or a model path
ASR_PARAKEET_MODEL_DIR=models/sherpa-onnx-nemo-parakeet-tdt-0.6b-v3-int8
ASR_ENABLE_DEMUCS=false
ASR_ENABLE_VAD=false

# ============================================
# Application Settings
# ============================================
APP_MAX_SPLIT_LENGTH=80
APP_USE_LLM=true
APP_SOURCE_LANGUAGE=en
APP_TARGET_LANGUAGE=de

# Spacy models for different languages. Use the model names appropriate for your environment.
APP_SPACY_MODEL_DE=de_core_news_md
APP_SPACY_MODEL_EN=en_core_web_md
APP_SPACY_MODEL_ZH=zh_core_web_sm

# ==================================================
# Optional: Advanced / Debug values
# ==================================================
# LOG_LEVEL=INFO
# DEBUG=true
